{{top-nav}}
<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
          {{#each model.label as |label|}}
            <li class="nav-item">
              <a class="nav-link active" href="#">
                <span data-feather="home"></span>
                {{label.name}} <span class="sr-only">(current)</span>
              </a>
            </li>
          {{/each}}
        </ul>
      </div>
    </nav>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      {{#if this.isListView}}
        <div class="form-group mt-5">
          {{input type="text" class="form-control" value=title placeholder="Enter Task Title"}}
        </div>
        <button type="button" class="btn btn-primary" {{action 'createTask'}} disabled={{isCreateTaskDisabled}}>Create
          Task</button>
        <div class="table-responsive">
          {{#each model.task as |task|}}
            {{task-list-item task=task edit=(action "edit") toggleStar=(action "toggleStar") toggleComplete=(action "toggleComplete")}}
          {{/each}}
        </div>
      {{else if this.isEditView}}
        <div class="card task-card mt-5">
          <div class="card-body">
            <div class="card-title">
              <div class="row">
                <div class="col">
                  <button {{action 'update'}} class="icon flat">
                    <i class="material-icons">
                      keyboard_backspace
                    </i>
                  </button>
                </div>
                <div class="col text-right">
                  <button {{action 'deleteRecord'}} class="icon btn-danger float-right">
                    <i class="material-icons">
                      delete
                    </i>
                  </button>
                  {{label-selector labels=model.label task=activeTask toggleLabel=(action "toggleLabel")}}
                </div>
              </div>
            </div>
            {{input type="checkbox" name="completed" checked=activeTask.completed}} Mark as completed
            <div class="tags-list">
              <ul class="p-0">
                {{#each activeTask.labels as |label|}}
                  <li class="chip">{{label.name}}</li>
                {{/each}}
              </ul>
            </div>
            {{input type="text" class="form-control" value=activeTask.title placeholder="Enter Task Title"}}
            {{textarea class="form-control" value=activeTask.details placeholder="Enter Details"}}
            {{bootstrap-datepicker value=activeTask.duedate_at startDate=today format="dd-mm-yyyy"}}
          </div>
        </div>
      {{/if}}
    </main>
  </div>
</div>
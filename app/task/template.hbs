    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="form-group">
        <label for="exampleInputEmail1">Task Title</label>
        {{input type="text" class="form-control" value=title placeholder="Enter Task Title"}}
      </div>
      <button type="button" class="btn btn-primary" {{action 'createTask'}} disabled={{isCreateTaskDisabled}}>Create
        Task</button>
      <div class="table-responsive">
        {{#if this.isListView}}
          {{#each model.task as |task|}}
            <div class="card task-card" {{action "edit" task on="click"}}>
              <div class="card-body">
                <h5 class="card-title">{{task.title}}</h5>
                {{!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> --}}
                <p class="card-text">{{task.details}}</p>
                {{!-- <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a> --}}
              </div>
            </div>
          {{/each}}
        {{else if this.isEditView}}
          <div class="card task-card">
            <div class="card-body">
              {{input type="checkbox" name="completed" checked=activeTask.completed}} Mark as completed
              {{input type="text" class="form-control" value=activeTask.title placeholder="Enter Task Title"}}
              {{textarea class="form-control" value=activeTask.details placeholder="Enter Details"}}
              {{bootstrap-datepicker value=activeTask.duedate_at startDate=today}}
              <button {{action 'update'}}>Save</button>
            </div>
          </div>
        {{/if}}
      </div>
    </main>
  </div>
</div>